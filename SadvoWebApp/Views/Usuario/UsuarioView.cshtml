@model UserListViewModel
@{
    ViewData["Title"] = "Mantenimiento de usuarios";
    bool eleccionActiva = ViewBag.EleccionActiva ?? false;
    Layout = "_LayoutAdmin";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Mantenimiento de Usuarios</h2>

                    @if (!eleccionActiva)
                    {
                        <a asp-action="AddUsuario" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Crear Nuevo Usuario
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary" disabled>
                            <i class="fas fa-plus"></i> Crear Nuevo Puesto
                        </button>
                    }
                </div>

                @if (eleccionActiva)
                {
                    <div class="alert alert-warning mx-3 mt-3">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Atención:</strong> Hay una elección activa. No se pueden crear, editar o cambiar el estado de los puestos electivos.
                    </div>
                }

                <div class="card-body">
                    @if (Model != null && Model.Usuarios.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Email</th>
                                        <th>Nombre de usuario</th>
                                        <th>Rol</th>
                                        <th>Estado</th>
                                        <th width="200">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var usuario in Model.Usuarios)
                                    {
                                        <tr>
                                            <td class="fw-bold">@usuario.Nombre</td>
                                            <td>@usuario.Apellido</td>
                                            <td>@usuario.Email</td>
                                            <td>@usuario.NombreUsuario</td>
                                            <td>
                                                @if (usuario.Rol == Sadvo.Core.Domain.Enums.RolUsuario.Administrador)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check-circle"></i> Administrador
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-times-circle"></i> Dirigente
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (usuario.Estado == Sadvo.Core.Domain.Enums.Actividad.Activo)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check-circle"></i> Activo
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-times-circle"></i> Inactivo
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (!eleccionActiva)
                                                {
                                                    <div class="d-flex gap-2">
                                                        <!-- Botón Editar -->
                                                        <a asp-action="EditUsuario" asp-route-id="@usuario.Id"
                                                           class="btn btn-primary btn-sm"
                                                           title="Editar">
                                                            <i class="fas fa-edit"></i> Editar
                                                        </a>

                                                        <!-- Botón Activar/Desactivar -->
                                                        <!-- Botón Activar/Desactivar -->
                                                        @if (usuario.Estado == Sadvo.Core.Domain.Enums.Actividad.Activo)
                                                        {
                                                            <a asp-action="ConfirmarCambioEstado" asp-route-id="@usuario.Id"
                                                               class="btn btn-warning btn-sm"
                                                               title="Desactivar puesto">
                                                                <i class="fas fa-toggle-off"></i> Desactivar
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a asp-action="ConfirmarCambioEstado" asp-route-id="@usuario.Id"
                                                               class="btn btn-success btn-sm"
                                                               title="Activar puesto">
                                                                <i class="fas fa-toggle-on"></i> Activar
                                                            </a>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="d-flex gap-2">
                                                        <button class="btn btn-secondary btn-sm" disabled title="No disponible durante elección activa">
                                                            <i class="fas fa-edit"></i> Editar
                                                        </button>
                                                        <button class="btn btn-secondary btn-sm" disabled title="No disponible durante elección activa">
                                                            <i class="fas fa-ban"></i> Bloqueado
                                                        </button>
                                                    </div>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No hay usuarios registrados</h5>
                            <p class="text-muted">Utiliza el botón "Crear Nuevo Usuario" para agregar el primer usuario.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
