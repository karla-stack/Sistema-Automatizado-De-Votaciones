@model UserMantenimientoViewModel
@{
    ViewData["Title"] = ViewBag.IsEdit == true ? "Editar Usuario" : "Crear Nuevo Usuario";
    bool isEdit = ViewBag.IsEdit ?? false;
    Layout = "_LayoutAdmin";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="fas @(isEdit ? "fa-edit" : "fa-plus")"></i>
                        @(isEdit ? "Editar Usuario" : "Crear Nuevo Usuario")
                    </h2>
                </div>

                <div class="card-body">


                    @* Mostrar mensaje de error de validación *@
                    @if (!string.IsNullOrEmpty(Model?.Mensaje))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            @Model.Mensaje
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="@(isEdit ? "EditUsuario" : "AddUsuario")" method="post">
                        @if (isEdit)
                        {
                            <input asp-for="Id" type="hidden" />
                            <input asp-for="Estado" type="hidden" />
                        }

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">
                                Nombre del usuario <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Nombre"
                                   class="form-control @(ViewData.ModelState.IsValid ? "" : (ViewData.ModelState["Nombre"]?.Errors.Count > 0 ? "is-invalid" : ""))"
                                   placeholder="Ingrese el nombre del puesto electivo"
                                   maxlength="100" />
                            <span asp-validation-for="Nombre" class="invalid-feedback"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Apellido" class="form-label fw-bold">
                                Apellido del usuario <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Apellido"
                                   class="form-control @(ViewData.ModelState.IsValid ? "" : (ViewData.ModelState["Apellido"]?.Errors.Count > 0 ? "is-invalid" : ""))"
                                   placeholder="Ingrese el apellido del usuario"
                                   maxlength="100" />
                            <span asp-validation-for="Apellido" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                Email del usuario <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Email"
                                   class="form-control @(ViewData.ModelState.IsValid ? "" : (ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : ""))"
                                   placeholder="Ingrese el email del usuario"
                                   maxlength="100" />
                            <span asp-validation-for="Email" class="invalid-feedback"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="NombreUsuario" class="form-label fw-bold">
                                Username <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NombreUsuario"
                                   class="form-control @(ViewData.ModelState.IsValid ? "" : (ViewData.ModelState["NombreUsuario"]?.Errors.Count > 0 ? "is-invalid" : ""))"
                                   placeholder="Ingrese el username del usuario"
                                   maxlength="100" />
                            <span asp-validation-for="NombreUsuario" class="invalid-feedback"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Contrasena" class="form-label fw-bold">
                                Contraseña <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Contrasena"
                                   class="form-control @(ViewData.ModelState.IsValid ? "" : (ViewData.ModelState["Contrasena"]?.Errors.Count > 0 ? "is-invalid" : ""))"
                                   placeholder="Ingrese la contraseña del puesto electivo"
                                   maxlength="100" />
                            <span asp-validation-for="Contrasena" class="invalid-feedback"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Rol" class="form-label fw-bold">
                                <i class="fas fa-toggle-on"></i> Rol
                            </label>
                            <select asp-for="Rol" class="form-select form-select-lg">
                                <option value="1">Dirigente</option>
                                <option value="0">Administrador</option>
                            </select>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                            <div class="form-text">Rol actual del usuarioo</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label fw-bold">
                                <i class="fas fa-toggle-on"></i> Estado
                            </label>
                            <select asp-for="Estado" class="form-select form-select-lg">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                            <div class="form-text">Estado actual del usuario</div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Mensaje))
                        {
                            <div class="alert alert-danger mt-3">@Model.Mensaje</div>
                        }




                        <div class="d-flex justify-content-between">
                            <a asp-action="UsuarioView" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver Atrás
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas @(isEdit ? "fa-save" : "fa-plus")"></i>
                                @(isEdit ? "Guardar Cambios" : "Crear Usuario")
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (isEdit)
            {
                <div class="mt-3">
                    <div class="card bg-light">
                        <div class="card-body">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i>
                                <strong>Estado actual: @Model.Estado</strong>
                                @if (Model?.Estado == Sadvo.Core.Domain.Enums.Actividad.Activo)
                                {
                                    <span class="badge bg-success ms-1">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary ms-1">Inactivo</span>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
