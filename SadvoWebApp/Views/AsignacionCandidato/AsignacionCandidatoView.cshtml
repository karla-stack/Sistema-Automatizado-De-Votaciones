@model AsignacionCandidatoList
@{
    ViewData["Title"] = "Asignación de Candidatos a Puestos";
    Layout = "_LayoutDirigente";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-users-cog"></i>
                        Asignación de Candidatos a Puestos Electivos
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Botón para agregar nueva asignación -->
                    <div class="mb-3">
                        @if (ViewBag.EleccionActiva == null || ViewBag.EleccionActiva == false)
                        {
                            <a href="@Url.Action("AddAsignacionCandidato", "AsignacionCandidato")" class="btn btn-primary">
                                <i class="fas fa-plus"></i>
                                Agregar Nueva Asignación
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>
                                <i class="fas fa-plus"></i>
                                Agregar Nueva Asignación
                            </button>
                            <div class="alert alert-warning mt-2">
                                <i class="fas fa-exclamation-triangle"></i>
                                No se pueden crear o eliminar asignaciones mientras hay una elección activa.
                            </div>
                        }
                    </div>

                    <!-- Tabla de asignaciones -->
                    @if (Model != null && Model.Lista != null && Model.Lista.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Candidato</th>
                                        <th>Puesto Electivo</th>
                                        <th width="120">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Lista)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-user"></i>
                                                @item.Nombre @item.Apellido
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.PuestoAsignado))
                                                {
                                                    <span class="badge badge-info" style="color: black;">@item.PuestoAsignado</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin puesto asignado</span>
                                                }
                                            </td>
                                            <td>
                                                @if (ViewBag.EleccionActiva == null || ViewBag.EleccionActiva == false)
                                                {
                                                    <a href="@Url.Action("DeleteAsignacionCandidato", "AsignacionCandidato", new { Id = item.Id })" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                        Eliminar
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-secondary btn-sm" disabled>
                                                        <i class="fas fa-trash"></i>
                                                        Eliminar
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            No hay asignaciones de candidatos a puestos electivos registradas.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>