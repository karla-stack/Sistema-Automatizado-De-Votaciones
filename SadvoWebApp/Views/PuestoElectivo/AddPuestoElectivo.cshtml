@model PuestoElectivoViewModel
@{
    ViewData["Title"] = ViewBag.IsEdit == true ? "Editar Puesto Electivo" : "Crear Nuevo Puesto Electivo";
    bool isEdit = ViewBag.IsEdit ?? false;
    Layout = "_LayoutAdmin";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="fas @(isEdit ? "fa-edit" : "fa-plus")"></i>
                        @(isEdit ? "Editar Puesto Electivo" : "Crear Nuevo Puesto Electivo")
                    </h2>
                </div>

                <div class="card-body">

                    @* Mostrar mensaje de error de validación *@
                    @if (!string.IsNullOrEmpty(Model?.Mensaje))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            @Model.Mensaje
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form asp-action="@(isEdit ? "EditPuestoElectivo" : "AddPuestoElectivo")" method="post">
                        @if (isEdit)
                        {
                            <input asp-for="Id" type="hidden" />
                            <input asp-for="Estado" type="hidden" />
                        }

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">
                                Nombre del Puesto <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Nombre"
                                   class="form-control @(ViewData.ModelState.IsValid ? "" : (ViewData.ModelState["Nombre"]?.Errors.Count > 0 ? "is-invalid" : ""))"
                                   placeholder="Ingrese el nombre del puesto electivo"
                                   maxlength="100" />
                            <span asp-validation-for="Nombre" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-bold">
                                Descripción <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Descripcion"
                                      class="form-control @(ViewData.ModelState.IsValid ? "" : (ViewData.ModelState["Descripcion"]?.Errors.Count > 0 ? "is-invalid" : ""))"
                                      rows="4"
                                      placeholder="Ingrese la descripción del puesto electivo"
                                      maxlength="500"></textarea>
                            <span asp-validation-for="Descripcion" class="invalid-feedback"></span>
                            <div class="form-text">Máximo 500 caracteres</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="PuestoElectivoView" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver Atrás
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas @(isEdit ? "fa-save" : "fa-plus")"></i>
                                @(isEdit ? "Guardar Cambios" : "Crear Puesto")
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (isEdit)
            {
                <div class="mt-3">
                    <div class="card bg-light">
                        <div class="card-body">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i>
                                <strong>Estado actual: @Model.Estado</strong>
                                @if (Model.Estado.ToString() == "Activo" || Model.Estado.Equals(1))
                                {
                                    <span class="badge bg-success ms-1">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary ms-1">Inactivo</span>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
