@using Sadvo.Core.Domain.Enums
@model CandidatoListViewModel
@{
    ViewData["Title"] = "Mantenimiento de Candidatos";
    bool eleccionActiva = ViewBag.EleccionActiva ?? false;
    Layout = "_LayoutDirigente";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-users me-2"></i>
                        Mantenimiento de Candidatos
                    </h4>

                    @if (!eleccionActiva)
                    {
                        <a href="@Url.Action("AddCandidato")" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i>
                            Nuevo Candidato
                        </a>
                    }
                </div>

                <div class="card-body">
                    <!-- Mensajes -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.candidatos == null || !Model.candidatos.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No hay candidatos registrados</h5>
                            @if (!eleccionActiva)
                            {
                                <p class="text-muted">Crea el primer candidato haciendo clic en el botón "Nuevo Candidato"</p>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="width: 80px;">Foto</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Puesto</th>
                                        <th>Estado</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        // Filtrar candidatos válidos
                                        var candidatosValidos = Model.candidatos.Where(c =>
                                        !string.IsNullOrEmpty(c.Nombre) &&
                                        !string.IsNullOrEmpty(c.Apellido)).ToList();
                                    }

                                    @foreach (var candidato in candidatosValidos)
                                    {
                                        <tr>
                                            <!-- COLUMNA FOTO - VERSIÓN SIMPLE -->
                                            <td class="align-middle">
                                                @if (!string.IsNullOrEmpty(candidato.FotoPath))
                                                {
                                                    <!-- Solo mostrar imagen si existe -->
                                                    <img src="@candidato.FotoPath"
                                                         alt="@candidato.Nombre @candidato.Apellido"
                                                         class="rounded-circle"
                                                         style="width: 50px; height: 50px; object-fit: cover; border: 2px solid #dee2e6;">
                                                }
                                                else
                                                {
                                                    <!-- Solo mostrar círculo si NO hay foto -->
                                                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center"
                                                         style="width: 50px; height: 50px; border: 2px solid #dee2e6;">
                                                        <i class="fas fa-user text-white"></i>
                                                    </div>
                                                }
                                            </td>

                                            <!-- NOMBRE -->
                                            <td class="align-middle">
                                                <strong>@candidato.Nombre</strong>
                                            </td>

                                            <!-- APELLIDO -->
                                            <td class="align-middle">
                                                <strong>@candidato.Apellido</strong>
                                            </td>

                                            <!-- PUESTO -->
                                            <td class="align-middle">
                                                @if (string.IsNullOrEmpty(candidato.PuestoAsociado))
                                                {
                                                    <span class="badge bg-secondary">Sin puesto asociado</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@candidato.PuestoAsociado</span>
                                                }
                                            </td>

                                            <!-- ESTADO -->
                                            <td class="align-middle">
                                                @if (candidato.Estado == Actividad.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                            </td>

                                            <!-- ACCIONES -->
                                            <td class="text-center align-middle">
                                                @if (!eleccionActiva)
                                                {
                                                    <div class="btn-group">
                                                        <!-- Botón Editar -->
                                                        <a asp-action="EditCandidato" asp-route-id="@candidato.Id"
                                                           class="btn btn-primary btn-sm">
                                                            <i class="fas fa-edit"></i> Editar
                                                        </a>

                                                        <!-- Botón Estado -->
                                                        @if (candidato.Estado == Sadvo.Core.Domain.Enums.Actividad.Activo)
                                                        {
                                                            <a asp-action="ConfirmarCambioEstado" asp-route-id="@candidato.Id"
                                                               class="btn btn-warning btn-sm">
                                                                <i class="fas fa-toggle-off"></i> Desactivar
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a asp-action="ConfirmarCambioEstado" asp-route-id="@candidato.Id"
                                                               class="btn btn-success btn-sm">
                                                                <i class="fas fa-toggle-on"></i> Activar
                                                            </a>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">
                                                        <i class="fas fa-lock"></i> Bloqueado
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Información adicional -->
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Total de candidatos: <strong>@candidatosValidos.Count</strong> |
                                Activos: <strong>@candidatosValidos.Count(c => c.Estado == Actividad.Activo)</strong> |
                                Con foto: <strong>@candidatosValidos.Count(c => !string.IsNullOrEmpty(c.FotoPath))</strong>
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table td {
        vertical-align: middle;
        padding: 0.75rem;
    }

    .btn-group .btn {
        margin: 0 2px;
    }

    .rounded-circle {
        transition: transform 0.2s ease;
    }

        .rounded-circle:hover {
            transform: scale(1.05);
        }
</style>