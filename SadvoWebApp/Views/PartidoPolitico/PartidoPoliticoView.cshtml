@model PartidoPoliticoListViewModel
@{
    ViewData["Title"] = "Mantenimiento de Partidos Politicos";
    bool eleccionActiva = ViewBag.EleccionActiva ?? false;
    Layout = "_LayoutAdmin";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-flag me-2"></i>
                        Mantenimiento de Partidos Políticos
                    </h2>

                    @if (!eleccionActiva)
                    {
                        <a asp-action="AddPartidoPolitico" class="btn btn-light btn-lg">
                            <i class="fas fa-plus me-2"></i>
                            Crear Nuevo Partido
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg" disabled>
                            <i class="fas fa-plus me-2"></i>
                            Crear Nuevo Partido
                        </button>
                    }
                </div>

                <div class="card-body">
                    <!-- Mensajes de éxito/error -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>¡Éxito!</strong> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Error:</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (eleccionActiva)
                    {
                        <div class="alert alert-warning border-0 shadow-sm">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-triangle text-warning me-3 fa-2x"></i>
                                <div>
                                    <h6 class="mb-1">Elección Activa</h6>
                                    <p class="mb-0">No se pueden crear, editar o cambiar el estado de los partidos políticos durante una elección activa.</p>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model != null && Model.Partidos.Any())
                    {
                        <div class="row">
                            @foreach (var partido in Model.Partidos.Where(p => !string.IsNullOrEmpty(p.Nombre)))
                            {
                                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 mb-4">
                                    <div class="card h-100 shadow-sm partido-card">
                                        <!-- Header de la tarjeta con estado -->
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0 fw-bold text-truncate me-2" title="@partido.Nombre">
                                                @partido.Nombre
                                            </h5>
                                            @if (partido.Estado == Sadvo.Core.Domain.Enums.Actividad.Activo)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle me-1"></i>
                                                    Activo
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-times-circle me-1"></i>
                                                    Inactivo
                                                </span>
                                            }
                                        </div>

                                        <!-- Área del logo -->
                                        <div class="card-body text-center">
                                            <div class="logo-container mb-3">
                                                @* ✅ CORREGIDO: Usar LogoPath en lugar de Logo *@
                                                @if (!string.IsNullOrEmpty(partido.LogoPath))
                                                {
                                                    <img src="@partido.LogoPath"
                                                         alt="Logo @partido.Nombre"
                                                         class="partido-logo img-fluid"
                                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">

                                                    <!-- Fallback si la imagen no carga -->
                                                    <div class="logo-placeholder" style="display: none;">
                                                        <i class="fas fa-image fa-2x text-muted"></i>
                                                        <p class="text-muted mt-2 mb-0">Logo no disponible</p>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="logo-placeholder">
                                                        <i class="fas fa-image fa-2x text-muted"></i>
                                                        <p class="text-muted mt-2 mb-0">Sin logo</p>
                                                    </div>
                                                }
                                            </div>

                                            <!-- Siglas -->
                                            <div class="siglas-container mb-3">
                                                <span class="badge bg-primary fs-6 px-3 py-2 fw-bold">
                                                    @partido.Siglas
                                                </span>
                                            </div>

                                            <!-- Descripción -->
                                            <div class="descripcion-container mb-3">
                                                <p class="text-muted small mb-0">
                                                    @if (!string.IsNullOrEmpty(partido.Descripcion))
                                                    {
                                                        <span title="@partido.Descripcion">
                                                            @(partido.Descripcion.Length > 100 ?
                                                                                                            partido.Descripcion.Substring(0, 100) + "..." :
                                                                                                            partido.Descripcion)
                                            </span>
                                                                                        }
                                                    else
                                                    {
                                                        <em class="text-muted">Sin descripción</em>
                                                    }
                                                </p>
                                            </div>
                                        </div>

                                        <!-- Footer con acciones -->
                                        <div class="card-footer bg-light">
                                            @if (!eleccionActiva)
                                            {
                                                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                                    <!-- Botón Editar -->
                                                    <a asp-action="EditPartidoPolitico" asp-route-id="@partido.Id"
                                                       class="btn btn-primary btn-sm flex-md-fill"
                                                       title="Editar partido">
                                                        <i class="fas fa-edit me-1"></i>
                                                        Editar
                                                    </a>

                                                    <!-- Botón Activar/Desactivar -->
                                                    @if (partido.Estado == Sadvo.Core.Domain.Enums.Actividad.Activo)
                                                    {
                                                        <a asp-action="ConfirmarCambioEstado" asp-route-id="@partido.Id"
                                                           class="btn btn-warning btn-sm flex-md-fill"
                                                           title="Desactivar partido">
                                                            <i class="fas fa-toggle-off me-1"></i>
                                                            Desactivar
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="ConfirmarCambioEstado" asp-route-id="@partido.Id"
                                                           class="btn btn-success btn-sm flex-md-fill"
                                                           title="Activar partido">
                                                            <i class="fas fa-toggle-on me-1"></i>
                                                            Activar
                                                        </a>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                                    <button class="btn btn-secondary btn-sm flex-md-fill" disabled
                                                            title="No disponible durante elección activa">
                                                        <i class="fas fa-lock me-1"></i>
                                                        Bloqueado
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Estadísticas -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="row text-center">
                                            <div class="col-md-3">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-flag text-primary me-2 fa-lg"></i>
                                                    <div>
                                                        <h5 class="mb-0">@Model.Partidos.Count(p => !string.IsNullOrEmpty(p.Nombre))</h5>
                                                        <small class="text-muted">Total Partidos</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-check-circle text-success me-2 fa-lg"></i>
                                                    <div>
                                                        <h5 class="mb-0">@Model.Partidos.Count(p => !string.IsNullOrEmpty(p.Nombre) && p.Estado == Sadvo.Core.Domain.Enums.Actividad.Activo)</h5>
                                                        <small class="text-muted">Activos</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-times-circle text-danger me-2 fa-lg"></i>
                                                    <div>
                                                        <h5 class="mb-0">@Model.Partidos.Count(p => !string.IsNullOrEmpty(p.Nombre) && p.Estado == Sadvo.Core.Domain.Enums.Actividad.Inactivo)</h5>
                                                        <small class="text-muted">Inactivos</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-image text-info me-2 fa-lg"></i>
                                                    <div>
                                                        <h5 class="mb-0">@Model.Partidos.Count(p => !string.IsNullOrEmpty(p.Nombre) && !string.IsNullOrEmpty(p.LogoPath))</h5>
                                                        <small class="text-muted">Con Logo</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-vote-yea fa-4x text-muted"></i>
                            </div>
                            <h4 class="text-muted mb-3">No hay partidos políticos registrados</h4>
                            <p class="text-muted mb-4">Comienza creando el primer partido político para el sistema electoral.</p>
                            @if (!eleccionActiva)
                            {
                                <a asp-action="AddPartidoPolitico" class="btn btn-primary btn-lg">
                                    <i class="fas fa-plus me-2"></i>
                                    Crear Primer Partido
                                </a>
                            }
                            else
                            {
                                <p class="text-muted">
                                    <i class="fas fa-lock me-1"></i>
                                    No se pueden crear partidos durante una elección activa
                                </p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .partido-card {
        transition: all 0.3s ease;
        border: none;
        border-radius: 1rem;
        overflow: hidden;
    }

        .partido-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

    .logo-container {
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 0.75rem;
        border: 2px dashed #dee2e6;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .logo-container:hover {
            border-color: #0d6efd;
            background: linear-gradient(135deg, #f8f9ff 0%, #e7f3ff 100%);
        }

    .partido-logo {
        max-height: 100px;
        max-width: 180px;
        object-fit: contain;
        transition: transform 0.3s ease;
        border-radius: 0.5rem;
    }

        .partido-logo:hover {
            transform: scale(1.05);
        }

    .logo-placeholder {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
    }

    .siglas-container {
        min-height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .descripcion-container {
        min-height: 60px;
        display: flex;
        align-items: center;
        text-align: center;
    }

    .card-footer {
        border-top: 1px solid #e9ecef;
        border-radius: 0 0 1rem 1rem;
    }

    .card-header {
        border-radius: 1rem 1rem 0 0;
        border-bottom: 1px solid #e9ecef;
    }

    .badge {
        font-weight: 500;
        letter-spacing: 0.5px;
    }

    .btn-sm {
        transition: all 0.3s ease;
    }

        .btn-sm:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }

    .alert {
        border-radius: 0.75rem;
        border: none;
    }

    .partido-logo {
        max-height: 80px;
        max-width: 150px;
    }

    .card-header h5 {
        font-size: 1rem;
    }

    }
</style>