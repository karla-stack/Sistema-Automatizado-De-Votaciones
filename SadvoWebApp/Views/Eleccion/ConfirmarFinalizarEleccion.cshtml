@model Sadvo.Core.Application.ViewModels.Eleccion.ConfirmarFinalizarEleccionViewModel

@{
    ViewData["Title"] = "Confirmar Finalización de Elección";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        Confirmar Finalización de Elección
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Información de la elección -->
                    <div class="alert alert-info" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-info-circle"></i>
                            Información de la Elección
                        </h5>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <strong>Nombre:</strong>
                            </div>
                            <div class="col-sm-8">
                                @Model.NombreEleccion
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-4">
                                <strong>Fecha:</strong>
                            </div>
                            <div class="col-sm-8">
                                @Model.FechaFormateada
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-4">
                                <strong>Estado Actual:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span class="badge badge-success">Activa</span>
                            </div>
                        </div>
                    </div>

                    <!-- Advertencia principal -->
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i>
                            ¡Atención! Esta acción es irreversible
                        </h5>
                        <hr>
                        <p class="mb-0">
                            Al finalizar esta elección:
                        </p>
                        <ul class="mt-2 mb-0">
                            <li>Se procesarán todos los votos registrados</li>
                            <li>Se calcularán los resultados finales</li>
                            <li>No se podrán registrar más votos</li>
                            <li>La elección cambiará a estado "Finalizada"</li>
                            <li><strong>Esta acción NO se puede deshacer</strong></li>
                        </ul>
                    </div>

                    <!-- Pregunta de confirmación -->
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-dark">
                                <i class="fas fa-question-circle text-warning"></i>
                                ¿Está seguro que desea finalizar esta elección?
                            </h5>
                            <p class="card-text text-muted">
                                Esta acción procesará todos los votos y generará los resultados oficiales.
                            </p>
                        </div>
                    </div>

                    <!-- Botones de acción -->
                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("EleccionView", "Eleccion")"
                           class="btn btn-secondary btn-lg">
                            <i class="fas fa-times"></i>
                            Cancelar
                        </a>

                        <form method="post" asp-action="FinalizarEleccion" asp-route-id="@Model.EleccionId" class="d-inline">
                            <button type="submit"
                                    class="btn btn-danger btn-lg"
                                    onclick="return confirm('¿Está completamente seguro? Esta acción es IRREVERSIBLE.');">
                                <i class="fas fa-stop-circle"></i>
                                Finalizar Elección
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Información adicional -->
<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb"></i>
                    ¿Qué sucede después de finalizar?
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-success">
                            <i class="fas fa-check-circle"></i>
                            Se habilitará:
                        </h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-chart-bar text-success"></i> Visualización de resultados</li>
                            <li><i class="fas fa-download text-success"></i> Exportación de datos</li>
                            <li><i class="fas fa-file-alt text-success"></i> Reportes oficiales</li>
                            <li><i class="fas fa-plus text-success"></i> Creación de nueva elección</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-danger">
                            <i class="fas fa-times-circle"></i>
                            Se deshabilitará:
                        </h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-vote-yea text-danger"></i> Registro de votos</li>
                            <li><i class="fas fa-user-plus text-danger"></i> Agregar candidatos</li>
                            <li><i class="fas fa-edit text-danger"></i> Modificar configuración</li>
                            <li><i class="fas fa-undo text-danger"></i> Revertir la finalización</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header.bg-warning {
        border-bottom: 2px solid #ffc107;
    }

    .card-header.bg-info {
        border-bottom: 2px solid #17a2b8;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.125rem;
    }

    .alert-heading {
        font-weight: 600;
    }

    .border-warning {
        border-color: #ffc107 !important;
        border-width: 2px !important;
    }

    .border-info {
        border-color: #17a2b8 !important;
        border-width: 2px !important;
    }

    .list-unstyled li {
        padding: 0.25rem 0;
    }

    .card.bg-light {
        border: 1px solid #dee2e6;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Agregar efecto de hover a los botones
            $('.btn-danger').hover(
                function() {
                    $(this).addClass('shadow-lg');
                },
                function() {
                    $(this).removeClass('shadow-lg');
                }
            );
        });
    </script>
}